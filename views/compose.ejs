<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="POST">
  <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" name="postTitle" placeholder="Blog title">
  </div>
  <div class="form-group">
    <label >Post</label>
    <textarea name="postContent" class="form-control" rows="8" cols="80" placeholder="Blog about something magnificent"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") -%>
